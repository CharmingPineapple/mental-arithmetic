<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity1"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="360dp"
        android:layout_height="320dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2">

        <Button
            android:id="@+id/add1"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:onClick="addNum"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="2"
            android:onClick="addNum"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add3"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="3"
            android:onClick="addNum"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add4"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="4"
            android:onClick="addNum"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/add5"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="5"
            android:onClick="addNum"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add6"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="6"
            android:onClick="addNum"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add7"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="7"
            android:onClick="addNum"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/add8"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="8"
            android:onClick="addNum"
            android:textSize="30sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/add9"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="9"
            android:onClick="addNum"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addDot"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="."
            android:onClick="addNum"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/add0"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="0"
            android:onClick="addNum"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="Del"
            android:onClick="delete"
            android:textSize="30sp" />

    </android.support.v7.widget.GridLayout>


    <Button
        android:id="@+id/next"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:onClick="start"
        android:text="Start"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/settingsGame" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/task"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="="
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="133dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="0" />

    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="8dp"
        android:onClick="test"
        android:text="Назад"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settingsGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/settingsGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="to8"
        android:text="Настройки сессии"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintStart_toEndOf="@+id/back" />

    <TextView
        android:layout_width="149dp"
        android:layout_height="61dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="Time"
        android:textColor="@android:color/black"
        android:id="@+id/timer"
        android:onClick="to8"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/settingsGame"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</android.support.constraint.ConstraintLayout>