<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity8"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/plusTime"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="37dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:onClick="plusTextTime"
        android:text="+"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/numTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wordTime"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Время:"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numTime"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/minusTime"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/minusTime"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="37dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:onClick="minusTextTime"
        android:text="-"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/wordTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wordDifficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Выбор примеров:"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordTime" />

    <Button
        android:id="@+id/backTo1"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:onClick="backTo1"
        android:text="Назад"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="239dp"
        android:layout_height="329dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/showNext"
        app:layout_constraintStart_toEndOf="@+id/showPrev"
        app:layout_constraintTop_toBottomOf="@+id/wordDifficult">

        <!--Примеры на СЛОЖЕНИЕ И ВЫЧИТАНИЕ (ЦЕЛЫЕ)-->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textA"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="center"
                android:text="+ -"
                android:textColor="@android:color/black"
                android:textSize="32sp" />

            <!--СЛОЖЕНИЕ-->
            <Button
                android:id="@+id/a1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="X+X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="XX+X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="XX+XX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a4"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="XXX+XX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a5"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="XXX+XXX"
                android:textSize="18sp" />

            <!--ВЫЧИТАНИЕ-->
            <Button
                android:id="@+id/a6"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="X-X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a7"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="XX-X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a8"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="XX-XX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a9"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="XXX-XX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a10"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="XXX-XXX"
                android:textSize="18sp" />


        </GridLayout>

        <!--Примеры на УМНОЖЕНИЕ И ДЕЛЕНИЕ (ЦЕЛЫЕ)-->


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textB"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="center"
                android:text="× :"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="32sp" />

            <!--УМНОЖЕНИЕ-->
            <Button
                android:id="@+id/b1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="X×X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="XX×X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="XX×XX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b4"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="XXX×XX"
                android:textSize="18sp" />


            <!--ДЕЛЕНИЕ-->
            <Button
                android:id="@+id/b5"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="X:X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="XX:X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b7"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="XX:XX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="XXX:XX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="XXX:XXX"
                android:textSize="18sp" />
        </GridLayout>

        <!--Примеры на ВОЗВЕДЕНИЕ В СТЕПЕНЬ И ИЗВЛЕЧЕНИЕ КОРНЯ (ЦЕЛЫЕ)-->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textC"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="center"
                android:text="^ √"
                android:textColor="@android:color/black"
                android:textSize="32sp" />

            <!--ВОЗВЕДЕНИЕ В СТЕПНЬ-->
            <Button
                android:id="@+id/c1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="X^X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/c2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="XX^X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/c3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="X^X±X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/c4"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="X^X±XX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/c5"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="X^X±X^X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/c6"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:onClick="taskClick"
                android:text="(XX±X)^X"
                android:textSize="18sp" />

            <!--ИЗВЛЕЧЕНИЕ КОРНЯ-->
            <Button
                android:id="@+id/c7"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="√X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/c8"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="√XX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/c9"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="√XX×X"
                android:textSize="18sp" />

            <Button
                android:id="@+id/c10"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="√XX×XX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/c11"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:onClick="taskClick"
                android:text="√XXX×X^X"
                android:textSize="18sp" />
        </GridLayout>



    </ViewFlipper>

    <Button
        android:id="@+id/showPrev"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="65dp"
        android:layout_height="100dp"
        android:layout_marginBottom="119dp"
        android:onClick="showPrev"
        android:text="^ √"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/backTo1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/showNext"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="65dp"
        android:layout_height="100dp"
        android:layout_marginBottom="213dp"
        android:onClick="showNext"
        android:text="× :"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>